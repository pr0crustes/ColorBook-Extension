{
	"manifest_version": 2,
	"name": "ColorBook-Extension",
	"version": "0.1",

	"permissions": [
		"storage"
	],

	"content_scripts": [
		{
			"matches": [
				"*://www.facebook.com/*"
			],
			"js": [
				"content.js"
			]
		}
	],

	"browser_action": {
		"default_icon": "logo.png",
		"default_popup": "popup/index.html",
		"default_title": "ColorBook Settings"
	}
}
